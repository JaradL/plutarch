.signup-form
  .form-horizontal
    .col-xs-8.col-xs-offset-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        %h2 Edit #{resource_name.to_s.humanize}
        = render "devise/shared/error_messages", resource: resource
        .form-group
          = f.label :email, :class => "label control-label col-xs-4"
          .col-xs-8
            = f.email_field :email, autofocus: true, autocomplete: "email", :class => "input form-control"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
        .form-group
          = f.label :password, :class => "label control-label col-xs-4"
          .col-xs-8
            = f.password_field :password, autocomplete: "new-password", :class => "input form-control"
            - if @minimum_password_length
              = @minimum_password_length 
              characters minimum
        .form-group
          = f.label :password_confirmation, :class => "label control-label col-xs-4"
          .col-xs-8
            = f.password_field :password_confirmation, autocomplete: "new-password", :class => "input form-control"
        .form-group
          = f.label :current_password, :class => "label control-label col-xs-4"
          .col-xs-8
            = f.password_field :current_password, autocomplete: "current-password", :class => "input form-control"
        .form-group
          .col-xs-8.col-xs-offset-4.text-center
            .actions
              = f.submit "Update", :class => "btn btn-md btn-primary btn-center rounded"
        .text-center
          = button_to 'Delete account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-md btn-danger btn-center rounded'
